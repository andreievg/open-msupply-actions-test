{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/itemCode",
      "label": "Item Code",
      "options": {
        "useDebounce": false
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/itemName",
      "label": "Item Name"
    },
    {
      "type": "Control",
      "scope": "#/properties/monthlyConsumptionLookBackPeriod",
      "label": "AMC Lookback Period",
      "options": {
        "readonly": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/sort",
      "label": "Sort by:",
      "options": {
        "show": [
          ["name", "name"],
          ["code", "code"],
          ["SOH", "stock on hand"],
          ["MOS", "months cover"]
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/dir",
      "label": "Sort direction"
    }
  ]
}
